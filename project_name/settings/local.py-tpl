CACHE_MIDDLEWARE_SECONDS = 1
for cache in CACHES:
    CACHES[cache]['LOCATION'] = 'redis://redis:6379/0'

    if cache == SESSION_CACHE_ALIAS:
        continue

    CACHES[cache]['TIMEOUT'] = CACHE_MIDDLEWARE_SECONDS


